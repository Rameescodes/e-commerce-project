<%- include('../layouts/adminheader.ejs') %>

        <section class="content-main">
            <div class="row">
                <div class="col-6">
                    <div class="content-header">
                        <h2 class="content-title">Add New Category</h2>
                    </div>
                </div>
            </div>      
            <form action="" method="post" enctype="multipart/form-data">
                <% if (typeof message !== 'undefined') { %>
                    <p style="color: red;"><%= message %></p>
                <% } else { %>
                    <p></p>
                <% } %>      

              
                <div class="row">
                    <div class="col-lg-6">
                        <div class="card mb-4">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-3">
                                        <h6>1. General info</h6>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="mb-4">
                                            <label class="form-label">Product title</label>
                                            <input type="text" name="title" placeholder="Type here" class="form-control">
                                        </div>
                                        <div class="mb-4">
                                            <label class="form-label">Description</label>
                                            <textarea placeholder="Type here" name="Description" class="form-control" rows="4"></textarea>
                                        </div>
                                        
                                    </div> <!-- col.// -->
                            
                                <hr class="mb-4 mt-0">
                                <div class="row">
                                    <div class="col-md-3">
                                        <h6>4. Media</h6>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="mb-4">                                            
                                            <label class="form-label">Images</label>
                                            <input class="form-control" required class="form-control" type="file" name="image">
                                        </div>
                                    </div> <!-- col.// -->
                                </div>
                                <button type="submit">submit</button>
                            </div>
                        </div>
                    </div>
                </div>
                </div>
            </form>
            
        </section> <!-- content-main end// -->
        

    



