        <%- include('../layouts/adminheader') %>
            <section class="content-main">

                <div class="row">

                    <div class="col">
                        <div class="content-header d-flex">
                            <h2 class="content-title">Product Details - <%= products.name %>
                            </h2>
                                <div>
                                    <a href="/admin/editpage?id=<%= products._id.toString() %>"
                                        class="btn btn-md rounded font-sm hover-up" style="width: 120px;">Edit Product</a>
                                </div>
                        </div>
                    </div>
                    <div class="card mb-1">
                        <div class="card-header">
                            <h3>View Image</h3>
                        </div>
                        <div class="m-1">
                            <label for="image1"></label>
                            <img id="imgView<%= 0 %>" src="/productImages/<%= products.image%>" alt=""
                                style="max-width: 30%; height: auto;"><br>
                            <br>
                        </div>
                    </div>
                    


                    <div class="col-lg-6">
                        <div class="card mb-4">
                            <div class="card-body">
                                <h5 class="my-2">Product Info</h5>
                                <div class="mb-4">
                                    <h6 class="mt-3">Product title</h6>
                                    <p>
                                        <%= products.name %>
                                    </p>
                                </div>

                                <div class="row gx-3">
                                    <div class="mb-3">
                                        <h6 class="mt-3">Quantity</h6>
                                        <p>
                                            <%= products.quantity %>
                                        </p>
                                    </div>
                                </div>

                               
                            </div>
                        </div> <!-- card end// -->
                        <div class="card mb-4">
                            <div class="card-body">
                                <h5 class="my-2">Product Specifications</h5>

                                <div class="mb-4">
                                    <h6 class="mt-3">description</h6>
                                    <p>
                                        <%= products.description %>
                                    </p>
                                </div>
                            </div>
                        </div> <!-- card end// -->
                    </div>
                    

                    <div class="col-lg-6">
                        <div class="card mb-4">
                            <div class="card-body mb-4">
                                <div class="mb-4">
                                    <h6 class="mt-3">Price</h6>
                                    <p>
                                        <%= products.price %>
                                    </p>

                                 <hr>
                                 <div class="mb-4">
                                    <h6 class="mt-3">Category</h6>
                                    <p>
                                        <%= products.category.category %>
                                    </p>
                                </div>
                            
                            </div>
                        </div> <!-- card end// -->
                    </div>
                </div>
                


            </section>

            <%- include('../layouts/adminfooter') %>